<Window x:Class="BN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BN"
        xmlns:vm="clr-namespace:BN.ViewModels.Base"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="616" Width="1134" ResizeMode="NoResize">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <TabControl>
            <TabItem Header="ПТ-6">
                <Grid>
                    <Image Source="/Views/Window/ST-6.png" Margin="0,-2,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="545" FlowDirection="LeftToRight" UseLayoutRounding="False"/>
                    <StatusBar VerticalAlignment="Bottom">
                        <StatusBarItem>
                            <TextBlock Text="{Binding Status}"></TextBlock>
                        </StatusBarItem>
                        <StatusBarItem>
                            <TextBox Text="{Binding AdressIP}"></TextBox>
                        </StatusBarItem>
                        <StatusBarItem>
                            <Button Content="Подключить" Command="{Binding ConnectToRackSteamTurbine}"></Button>
                        </StatusBarItem>
                    </StatusBar>
                    <Border Style="{StaticResource BorderForLabel}"  Margin="22,205,0,0" Background="{Binding BackgroundBorder}"/>
                    <Border Style="{StaticResource BorderForLabel}"  Margin="22,247,0,0" Background="{Binding BackgroundBorder}"/>
                    <Border Style="{StaticResource BorderForLabel}"  Margin="22,226,0,0" Background="{Binding BackgroundBorder}"/>
                    <Label Content="{Binding FirstParmReg}" Style="{StaticResource Parent_LabelOnImage}" Margin="27,241,0,0" Height="30"/>
                    <Label Content="{Binding FirstParmReg}" Style="{StaticResource Parent_LabelOnImage}" Margin="27,220,0,0"/>
                    <Label Content="{Binding FirstParmReg}" Style="{StaticResource Parent_LabelOnImage}" Margin="27,199,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="ГТ-7">
            </TabItem>
            <TabItem Header="ГТ-8"></TabItem>
        </TabControl>
    </DockPanel>
</Window>

