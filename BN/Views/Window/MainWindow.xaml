<Window x:Class="BN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BN"
        xmlns:vm="clr-namespace:BN.ViewModels.Base"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="616" Width="1134" ResizeMode="NoResize">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <TabControl>
            <TabItem Header="ПТ-6">
                <Grid>

                    <Image Source="/Views/Window/ScreenShot.SM.18.05.03.059.png">
                    </Image>
                    <StatusBar VerticalAlignment="Bottom">
                        <StatusBarItem>
                            <TextBlock Text="{Binding Status}"></TextBlock>
                        </StatusBarItem>
                        <StatusBarItem>
                            <TextBox Text="{Binding AdressIP}"></TextBox>
                        </StatusBarItem>
                        <StatusBarItem>
                            <Button Content="Подключить" Command="{Binding ConnectToRackSteamTurbine}"></Button>
                        </StatusBarItem>
                    </StatusBar>

                    <Label Content="{Binding FirstParmReg}"  Margin="232,292,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#008800" Background="#e5e5e5" FontWeight="Bold" ContentStringFormat="0.000 мм" BorderBrush="Black" BorderThickness="1.3" Height="30" VerticalContentAlignment="Center">

                    </Label>

                    <TextBox   HorizontalAlignment="Left" Margin="775,398,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Text="{Binding FirstNumber}">
                    </TextBox>
                    <TextBox HorizontalAlignment="Left" Margin="908,398,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Text="{Binding SecondNumber}"/>
                    <Button Content="Button" HorizontalAlignment="Left" Margin="881,421,0,0" VerticalAlignment="Top" Command="{Binding CalculateButton}"/>
                    <Label Content="{Binding SecondParmReg}" ContentStringFormat="0.000" HorizontalAlignment="Left" Margin="29,332,0,0" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Left" Margin="775,478,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Text="{Binding DatVrem}"/>
                    <Button  Content="Дай время" HorizontalAlignment="Left" Margin="804,517,0,0" VerticalAlignment="Top" Command="{Binding Day}"/>
                    <Label Content="{Binding ThirdParmReg}" ContentStringFormat="0.000" HorizontalAlignment="Left" Margin="29,363,0,0" VerticalAlignment="Top"/>




                </Grid>
            </TabItem>


            <TabItem Header="ГТ-7">
            </TabItem>
            <TabItem Header="ГТ-8"></TabItem>
        </TabControl>
    </DockPanel>
</Window>

